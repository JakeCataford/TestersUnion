<h1>Leads</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Unsubscribe</th>
      <th>Token</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.name %></td>
        <td><%= lead.email %></td>
        <td><%= lead.age %></td>
        <td><%= lead.sex %></td>
        <td><%= lead.unsubscribe %></td>
        <td><%= @tokens.find_by_lead_id(lead.id).value %></td>
        <td><%= link_to 'View', lead, class: "btn btn-info" %>
            <%= link_to 'Edit', edit_lead_path(lead), class: "btn btn-warning" %>
            <%= link_to 'Delete', lead, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lead', new_lead_path, class: "btn btn-primary" %>
